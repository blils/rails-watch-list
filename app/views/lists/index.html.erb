<div class="banner">
  <div class="titles">
    <h2>Lists - I HAD LOADS OF PHOTOS BUT ON LOCAL HOST AND I DIDN'T REALISE IT WASN'T ON HEROKU AAAAAA</h2>
    <%= link_to "Make a new list", new_list_path, class: "text-decoration-none" %>
  </div>
</div>

<div class="cards">
<% @lists.each do |list| %>
<div class="item card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU' %>)">
<%= link_to list.name, list_path(list), class: "text-decoration-none text-white"%>
</div>
<% end  %>
</div>
